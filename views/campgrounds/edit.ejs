    <% layout('../views/layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="post" novalidate class="validated-form">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="campground[title]" value="<%=camp.title%>" required>
            <div class="valid-feedback">
                Looks Good!
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" id="location" name="campground[location]" value="<%=camp.location%>" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="image">Image Url</label>
            <input class="form-control" type="text" id="image" name="campground[image]" value="<%=camp.image%>" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="price">CampgroundPrice</label>
            <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" id="price" placeholder="0.00" required aria-describedby="price-label" name="campground[price]" value="<%=camp.price%>" aria-label="price">
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" required name="campground[description]"><%=camp.description%></textarea>
        </div>
        <div class="mb-3">
            <button class="btn btn-info">Update CampGround</button>
        </div>
   
        <a href="/campgrounds">Back To Campgrounds</a>
    </form>
</div>
</div>
